.top {
    width: 100%;
    margin-top: -200rpx;
    display: flex;
    flex-direction: row;
    height: 98rpx;
    background-color: rgba(255, 98, 0, 0.89);
    align-items: center;
}

.searchItem {
    display: flex;
    width: 80%;
    background: #fff;
    flex-direction: row;
    border-radius: 10rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
}

icon {
    align-self: center;
    margin-left: 10rpx;
    margin-right: 20rpx;
}

input {
    width: 60%;
    border-radius: 10rpx;
    font-size: 35rpx;
    padding: 10rpx;
}

button {
    line-height: 50rpx;
    background: 0;
    color: #fff;
}

button::after {
    border: 0;
}

.btn {
    width: 180rpx;
    height: 55rpx;
}

image {
    width: 180rpx;
    height: 180rpx;
}

.schoollist-head-img {
    width: 100%;
    height: 180rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.schoollist {
    margin-top: -300rpx;
}

.school-list-info {
    float: left;
    margin-left: 18rpx;
    margin-top: 20rpx;
    position: relative;
}

.school-list-photo {
    width: 350rpx;
    height: 250rpx;
}

.school-list-desc {
    display: block;
    background-color: #000;
    color: #fff;
    position: absolute;
    bottom: 3%;
    left: 0;
    width: 94%;
    text-align: center;
    font-size: 25rpx;
    padding: 10rpx;
    opacity: 0.7;
}